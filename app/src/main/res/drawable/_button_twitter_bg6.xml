<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#E3E3E3" />
            <stroke
                android:width="1dp"
                android:color="#919191" />
            <corners
                android:radius="1dp" />
           
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#5E5E5E"
                android:centerColor="#808080"
                android:endColor="#5E5E5E"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#919191" />
            <corners
                android:radius="1dp" />
           
        </shape>
    </item>
</selector>